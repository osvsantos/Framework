<?xml version="1.0" encoding="UTF-8"?>
<suite name="Suite" parallel="tests" thread-count="3">
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/> <!-- Define o navegador como Chrome -->
        <classes>
            <class name="testsFront.LoginTest"/>
        </classes>
    </test>
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/> <!-- Define o navegador como Firefox -->
        <classes>
            <class name="testsFront.LoginTest"/>
        </classes>
    </test>
    <test name="Edge Tests">
        <parameter name="browser" value="edge"/> <!-- Define o navegador como Edge -->
        <classes>
            <class name="testsFront.LoginTest"/>
        </classes>
    </test>
</suite>
